// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Day {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId // MongoDB-specific ID field
  date        Int                                         // Integer date for simplicity (e.g., YYYYMMDD)
  daySchema   Json                                        // JSON representation of the day's data
  createdAt   DateTime @default(now())                    // Auto-set creation timestamp
  updatedAt   DateTime @updatedAt                         // Auto-set last updated timestamp
}

model ChartTypeConfig {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  keyName   String @unique
  lineCount Int    @default(0)
  barCount  Int    @default(0)
}

