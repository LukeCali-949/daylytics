// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Day {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId // MongoDB-specific ID field
  date        String @unique                           
  daySchema   Json                                        // JSON representation of the day's data
  createdAt   DateTime @default(now())                    // Auto-set creation timestamp
  updatedAt   DateTime @updatedAt                         // Auto-set last updated timestamp
}

model ChartTypeConfig {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  keyName   String @unique
  chartType String
}

model CumulativeSchema {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // MongoDB-specific ID
  schema    Json     // Holds the cumulative schema with types or metadata
  createdAt DateTime @default(now()) // When the cumulative schema was first created
  updatedAt DateTime @updatedAt      // Auto-updated on schema changes
}

model Conversation {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String?
  messages   Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


